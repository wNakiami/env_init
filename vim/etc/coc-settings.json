{
    // base options
    "json.format.enable": true,
    "suggest.enablePreview": false,
    "suggest.minTriggerInputLength": 2,
    "diagnostic.displayByAle": true,
    "coc.preferences.extensionUpdateCheck": "weekly",
    "diagnostic.messageDelay": 0,
    "diagnostic.checkCurrentLine": true,
    "diagnostic.messageTarget": "echo",
    "highlight.colors.enable": true,
    "hover.target": "float",

    // python
    // "python.jediEnabled": false,
    // "python.linting.flake8Args": ["--ignore=E221,E302,E305,E201,E501,E128,E231"],
    //"python.analysis.logLevel": "Error",

    // clangd
    "clangd.semanticHighlighting": true,
    "go.goplsOptions": {
        "semanticTokens": true
    },
    "coc.preferences.enableMessageDialog": true,
    "coc.preferences.floatActions": true,
    "signature.target": "float",
    "suggest.floatEnable": true,

    // coc.snippets
    "snippets.userSnippetsDirectory": "~/.vim/etc",
    "snippets.ultisnips.directories": ["~/.vim/etc"],

    // coc-explore
    //"explorer.position": "right",
    //"explorer.previewAction.onHover": false,

    // LS
    "languageserver": {
        "lua": {
            "cwd": "/home/nakiami/.lsp/lua-language-server",
            "command": "/home/nakiami/.lsp/lua-language-server/bin/Linux/lua-language-server",
            "args": ["-E", "-e", "LANG=en", "/home/nakiami/.lsp/lua-language-server/main.lua"],
            "filetypes": ["lua"],
            "trace.server": "verbose",
            "rootPatterns": [".git/"],
            "settings": {
                "Lua": {
                    "diagnostics": {
                        "disable": ["unused-function", "empty-block"]
                    }
                }
            }
        }
        //"golang": {
        //    "command": "gopls",
